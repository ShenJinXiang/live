<!doctype html>
<html>
<head>
	<meta charset='utf-8'>
	<link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.0/css/bootstrap.min.css">
	<link type='text/css' rel='stylesheet' href='/plugins/layer/skin/layer.css' />
	<title>person</title>
</head>
<body>
<div id='mainData'>
<button class='btn btn-primary btn-sm' v-on:click='add'>新增</button>
<br>
<br>
<table class='table table-striped table-bordered'>
	<tr>
		<th>姓名</th>
		<th>性别</th>
		<th>年龄</th>
		<th>地址</th>
		<th>操作</th>
	</tr>
	<tr v-if='personList.length <= 0'>
		<td colspan='5'>暂无数据</td>
	</tr>
	<tr v-if='personList.length > 0' v-for='person in personList'>	
		<td>{{person.name}}</td>
		<td>{{person.sex}}</td>
		<td>{{person.age}}</td>
		<td>{{person.address}}</td>
		<td>
			<a href='javascript:void(0);' v-on:click='edit(person.id)'>修改</a>
			<a href='javascript:void(0);' v-on:click='del(person.id)'>删除</a>
		</td>
	</tr>
</table>

<div id='personContent' style='display:none;width:700px;' class='container'>
	<div style='margin: 20px auto;'>
	<form id='personForm' class='form-horizontal' method='post'>
		<input type='hidden' id='id' name='id' v-model='person.id' />
		<div class='form-group'>
			<label for='name' class='col-sm-2 control-label'>姓名：</label>
			<div class='col-sm-10'>
				<input type='text' class='form-control' id='name' name='name' v-model='person.name' />
			</div>
		</div>
		<div class='form-group'>
			<label for='sex' class='col-sm-2 control-label'>性别：</label>
			<div class='col-sm-10'>
				<select class='form-control' id='sex' name='sex' v-model='person.sex'>
					<option value='男'>男</option>
					<option value='女'>女</option>
				</select>
			</div>
		</div>
		<div class='form-group'>
			<label for='age' class='col-sm-2 control-label'>年龄：</label>
			<div class='col-sm-10'>
				<input type='number' class='form-control' id='age' name='age'  v-model='person.age'/>
			</div>
		</div>
		<div class='form-group'>
			<label for='address' class='col-sm-2 control-label'>地址：</label>
			<div class='col-sm-10'>
				<input type='text' class='form-control' id='address' name='address' v-model='person.address' />
			</div>
		</div>
	</form>
		<div class='form-group'>
			<button class='btn btn-primary btn-sm' v-on:click='save'>保存</button>
			<button class='btn btn-default btn-sm' v-on:click='close'>关闭</button>
		</div>
	</div>
</div>
</div>
<!-- jQuery文件。务必在bootstrap.min.js 之前引入 -->
<script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
<!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
<script src="http://cdn.bootcss.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script type='text/javascript' src='/plugins/layer/layer.js'></script>
<script src="https://unpkg.com/vue"></script>
<script type='text/javascript' src='/js/common.js'></script>
<script src='/js/person/index.js'></script>
</body>
</html>

